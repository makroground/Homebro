        <Image Source="..\Assets\harley_quinn.jpg"
               Stretch="Uniform"
               VerticalAlignment="Top"
               HorizontalAlignment="Right"
               Margin="16" />
        <StackPanel>
            <TextBlock
                       FontSize="54"
                       FontWeight="Light"
                       Foreground="White"
                       HorizontalAlignment="Left"
                       Margin="190,0,0,0"
                       VerticalAlignment="Center" Height="77" >
                <Run Text="Licht"/>
                <LineBreak/>
                <Run/>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>