<Page
    x:Class="Homebro.Views.SecondPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Homebro.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- In this page, the background color is set at page level, not in the main grid. -->
    <!-- The SplitView in Compact* mode does not pick up that color - in my current setup. -->

    <Grid Background="#FF1E1E1E">
        <StackPanel>
            <TextBlock
                       FontSize="54"
                       FontWeight="Light"
                       Foreground="White"
                       HorizontalAlignment="Left"
                       Margin="80,30,0,0"
                       VerticalAlignment="Center" Height="77" Text="Sensoren" />

        </StackPanel>
    </Grid>
</Page>
